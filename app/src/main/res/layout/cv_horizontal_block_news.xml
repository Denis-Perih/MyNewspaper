<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHorizontalBlockNews"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="6dp"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/rlHorizontalBlockNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="6dp">

            <ImageView
                android:id="@+id/ivImageHorizontalBlockNews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/corners_header2_block_news"
                android:contentDescription="@string/description"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/tvHorizontalBlockNewsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/rubik_regular"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="18dp"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/tvHorizontalBlockNewsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/colus_regular"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="16dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>